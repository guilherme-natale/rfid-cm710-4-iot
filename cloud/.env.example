# RFID Cloud API - Environment Variables Example
# Copy this file to .env and fill in the values
# ⚠️ NEVER commit .env to version control

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017
DB_NAME=rfid_cloud

# JWT Security (generate with: openssl rand -hex 32)
JWT_SECRET=change-me-generate-with-openssl-rand-hex-32
JWT_EXPIRATION_HOURS=24

# Admin API Key (generate with: openssl rand -hex 32)
ADMIN_API_KEY=change-me-generate-secure-key

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rfid_user
RABBITMQ_PASSWORD=change-me-secure-password

# CORS Origins (comma-separated, use specific domains in production)
CORS_ORIGINS=*
